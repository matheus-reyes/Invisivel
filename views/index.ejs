<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title><in>visivel</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/bootstrap.css'>
  <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/index.css'>
</head>
<body>
  <div class="container-fluid" id='container-fluid'>
    <div class="row">
      <!-- Barra de Navegação -->
      <nav class="navbar navbar-expand-sm py-5">
        <div class="navbar-collapse">
          <ul class="navbar-nav"> 
            <li class="nav-item">
              <a class="nav-link fonte-principal" href="#" id="nav-sobre"> <b>Sobre</b> </a>
            </li>
            <li class="nav-item">
              <span class="barra-lateral fonte-principal"> </span>
            </li>
            <li class="nav-item">
              <a class="nav-link fonte-principal" href="#" id="nav-mural">  <b>Mural</b> </a>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <div class="conteudo" >
      <!-- Logo e botoes -->
      <div class="logo" id='logo-botoes'>
        &ltin&gtvisivel
      </div>
      <div class="botoes-itens" id='logo-botoes'>     
        <div class="botao">
          <input type="button" value="Entrar" data-toggle="modal" data-target="#modal-login">
        </div>
        <div class="botao">
          <input type="button" value="Criar uma conta" data-toggle="modal" data-target="#modal-cadastro">
        </div>
      </div>
    </div>

    <section>
      <div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modal-login-titulo" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="modal-login-titulo"> Login </h5>
                      <span type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </span>
                  </div>
  
                  <div class="modal-body">        
                      <div class="row justify-content-center">
                          <div class="col-lg-8"> 
                              <form id="form-login" action="/login" method="POST">
                                  <div class="form-group row">
                                      <label class="col-12 col-form-label modalText">Digite seu e-mail</label>
                                      <div class="col-12">
                                          <input id="email" type="text" class="form-control cursorText" value="" name="email">
                                      </div>
                                  </div>
                                  <div class="form-group row">
                                      <label class="col-12 col-form-label modalText">Digite sua senha</label>
                                      <div class="col-12">
                                          <input id="senha" type="password" class="form-control cursorText" name="senha">
                                      </div>
                                  </div>
                                  <div class="modal-footer">
                                      <button type="button" class="btn btn-danger" data-dismiss="modal"> Fechar </button>
                                      <button type="submit" class="btn btn-success"> Login </button>
                                  </div>
                              </form>
                          </div>
                      </div>            
                  </div>
              </div>
          </div>
      </div>
    </section>

    <section>
      <div class="modal fade" id="modal-cadastro" tabindex="-1" role="dialog" aria-labelledby="modal-cadastro-titulo" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="modal-cadastro-titulo"> Cadastro </h5>
                      <span type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </span>
                  </div>
  
                  <div class="modal-body">        
                      <div class="row justify-content-center">
                          <div class="col-lg-8"> 
                              <form id="form-cadastro" action="/cadastro" method="POST">
                                <div class="form-group row">
                                  <label class="col-12 col-form-label modalText">Digite seu nome</label>
                                  <div class="col-12">
                                      <input id="nome" type="text" class="form-control cursorText" value="" name="nome">
                                  </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-form-label modalText">Digite seu e-mail</label>
                                    <div class="col-12">
                                        <input id="email" type="text" class="form-control cursorText" value="" name="email">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-12 col-form-label modalText">Digite sua senha</label>
                                    <div class="col-12">
                                        <input id="senha" type="password" class="form-control cursorText" name="senha">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal"> Fechar </button>
                                    <button type="submit" class="btn btn-success"> Cadastrar </button>
                                </div>
                              </form>
                          </div>
                      </div>            
                  </div>
              </div>
          </div>
      </div>
    </section>

  <script type="text/javascript" src='javascripts/jquery.js'></script>
  <script type="text/javascript" src='javascripts/bootstrap.js'></script>
</body>
</html>
