<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title><in>visivel</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/bootstrap.css'>
  <link rel='stylesheet' type='text/css' media='screen' href='stylesheets/index.css'>
</head>
<body>
    <div class="container-fluid" id='container-fluid'>
        <div class="row">
            <!-- Barra de Navegação -->
            <div class="row mt-4">
                <div class="offset-1 col-4">
                    <a class="nav-link fonte-principal" href="#" id="nav-mural">  <b>&ltin&gtvisivel </b> </a>
                </div>
                <nav class="col-4 d-flex flex-row-reverse navbar navbar-expand-lg">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fonte-principal" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Modos
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/inicio">Modo pedir ajuda</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/mapa">Modo fornecer ajuda</a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <div class="col-3 d-flex flex-row-reverse">
                    <img id="imagem-identidade" src="images/perm_identity.png"/>
                </div>
        </div>
        </div>

        <div class="row mt-5">
            <div class="offset-1 col-10">
                <% for(reportes of reportes) { %>
                    <div class="row mt-3">
                        <div class="col-3 my-auto">
                            <img id="imagem-exibida" src="images/<%=reportes.img%>"/>
                        </div>

                        <div class="col-3 my-auto">
                            <p class="nome-responsavel"> <%=reportes.nomeResponsavel%> </p>
                        </div>

                        <div class="col-3 my-auto">
                            <button type="button" class="btn btn-warning botoes-principais" data-toggle="modal" data-target="#modal-reporte"> Editar </button>
                        </div>

                        <div class="col-3 my-auto">
                            <button type="button" class="btn btn-danger botoes-principais" data-toggle="modal" data-target="#modal-reporte"> Excluir </button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

    </div>

    

    

    <script type="text/javascript" src='javascripts/previewImage.js'></script>
    <script type="text/javascript" src='javascripts/jquery.js'></script>
    <script type="text/javascript" src='javascripts/bootstrap.js'></script>
</body>
</html>
